<form name="usersForm" style="padding-top: 30px;" data-ng-submit="loginUser.login(loginUser.username, loginUser.password)" novalidate>
<div class="usercard">
  
      <div class="input-group" style="padding-top: 40px; margin-bottom:1%">
        <table width="100%">
          <tr>
            <td width="200px;">
              <span class="input-group-addon" style="background-color: transparent; padding-right:5em; border-style:none;">Username: </span>
            </td>
            <td width="200px;">
              <input type="text" class="form-control" placeholder="Username" data-ng-model="loginUser.username" style="" required>
            </td>
          </tr>
        </table>
      </div>
      <div class="input-group" style="margin-bottom:1%">
        <table width="100%">
          <tr>
            <td width="200px;">
              <span class="input-group-addon" style="background-color: transparent; padding-right:5em; border-style:none">Password:  </span>
            </td>
            <td width="200px;">
              <input type="password" class="form-control" placeholder="Password" data-ng-model="loginUser.password" style="" required>
            </td>
          </tr>
        </table>
      </div>
      <div class="error">{{message}}</div>
      <div class="input-group" style="margin-bottom:1%; padding-bottom: 30px;">
      <button class="btn btn-default" style="margin-top:30px;">Log in</button>
      </div>
</div>
</form>
