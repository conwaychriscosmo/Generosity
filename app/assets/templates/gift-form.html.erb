<!--Still need to add something like data-ng-init="recipient=$parent.username."-->
<form name="gifsForm" style="margin-left: 3%;" data-ng-submit="newGift.addGift()" novalidate>
<div class="usercard">
      <div class="input-group" style="margin-bottom:1%; margin-top: 30px;text-align: center;">
        <table width="100%">
          <tr>
            <td width="200px;">
              <span class="input-group-addon" style="background-color: transparent; padding-right:5em; border-style:none;">Gift name: </span>
            </td>
            <td width="200px;">
              <input type="text" class="form-control" placeholder="Gift name" data-ng-model="newGift.name" style="" required>
            </td>
          </tr>
        </table>
      </div>
      <div class="input-group" style="margin-bottom:1%">
        <table width="100%">
          <tr>
            <td width="200px;">
              <span class="input-group-addon" style="background-color: transparent; padding-right:5em; border-style:none">Description:  </span>
            </td>
            <td width="200px;">
              <input type="text" class="form-control" placeholder="Description" data-ng-model="newGift.description" style="" required>
            </td>
          </tr>
        </table>
      </div>
      <div class="input-group" style="margin-bottom:1%">
        <table width="100%">
          <tr>
            <td width="200px;">
              <span class="input-group-addon" style="background-color: transparent; padding-right:5em; border-style:none">Image URL:  </span>
            </td>
            <td width="200px;">
              <input type="text" class="form-control" placeholder="trollface.jpg" data-ng-model="newGift.imageUrl" style="" required>
            </td>
          </tr>
        </table>
      </div>
      <div class="input-group" style="margin-bottom:1%">
      Your gift: <img style="width:100px; height:100px;" src="{{newGift.imageUrl}}">
      <div class="error">{{message}}</div>
      <button class="btn btn-default" style="margin-top:70px;">Create Gift</button>
      </div>
</div>
</form>
